<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.modestoappln.StaticReview"
    tools:ignore="NestedWeights,ContentDescription"
    >
    
     <ImageView
        android:id="@+id/StaticReviewimageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:alpha="0.5"
        android:scaleType="fitXY" />
    
    <LinearLayout
                            android:id="@+id/StaticReviewLinearLay1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            
                            android:orientation="horizontal" >

                            <RatingBar
                                android:id="@+id/StaticratingBar1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
							<Button
                                android:id="@+id/StaticReviewbutton1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="@string/rate" />
                        
                            
                    </LinearLayout>
                	<LinearLayout
                        android:id="@+id/StaticCommentSecondLinear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/StaticReviewLinearLay1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical" >

                        <ImageView
                                android:layout_width="150dp"
                                android:layout_height="80dp"
                                android:gravity="left"
                                android:src="@drawable/review" />

                        <EditText
                            android:id="@+id/StaticCommentSecondeditText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_edittext"
                            android:ems="10"
                            android:hint="@string/add_your_review_"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:paddingLeft="4dp" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/StaticCommentSecondLinear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/StaticCommentSecondLinear1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical" >
                        <ImageView
                                android:layout_width="180dp"
                                android:layout_height="70dp"
                                android:gravity="left"
                                android:src="@drawable/comment1" />
                        <EditText
                            android:id="@+id/StaticCommentSecondeditText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_edittext"
                            android:ems="10"
                            android:hint="@string/add_your_comments_"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:paddingLeft="4dp" />
                    </LinearLayout>

</RelativeLayout>
